<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<!--<menu id="applications-menu" label="Applications" execute="/usr/libexec/openbox-xdg-menu applications"/>
	<menu id="preferences-menu" label="Preferences" execute="/usr/libexec/openbox-xdg-menu preferences"/>
	<menu id="administration-menu" label="Administration" execute="/usr/libexec/openbox-xdg-menu system-settings"/>
	<menu id="terminals-menu" label="Terminals" execute="/usr/libexec/openbox-xdg-menu /etc/xdg/openbox/terminals"/>
	--
	<menu id="applications-new" label="Apps" execute="~/.config/openbox/view-apps.csh"/>
	-->
	<menu id="root-menu" label="Openbox 3">
		<separator label="CPW Online"/>
		<menu id="applications-new"/>
		<menu id="general" label="General">
			<menu id="applications-menu" label="Applications" execute="~/.config/openbox/view-apps.csh --applications"/>
			<menu id="preferences-menu" label="Preferences" execute="~/.config/openbox/view-apps.csh --preferences"/>
			<menu id="settings-menu" label="System settings" execute="~/.config/openbox/view-apps.csh --system-settings"/>
			<menu id="terminals-menu" label="Terminals" execute="~/.config/openbox/view-apps.csh --terminals"/>
			<item label="Restart menu">
				<action name="Execute">
					<command>~/.config/openbox/view-apps.csh --restart</command>
				</action>
			</item>
		</menu>
		<separator/>
		<menu id="system" label="System">
			<item label="Reconfigure Openbox">
				<action name="Reconfigure" />
			</item>
			<item label="Edit Openbox Menu">
				<action name="Execute"><command>mousepad ~/.config/openbox/menu.xml</command></action>
			</item>
			<item label="Edit Openbox RC">
				<action name="Execute"><command>mousepad ~/.config/openbox/rc.xml</command></action>
			</item>
			<item label="Edit Openbox Autostart">
				<action name="Execute"><command>mousepad ~/.config/openbox/autostart</command></action>
			</item>
			<separator/>
			<item label="Edit Tint2 Settings">
				<action name="Execute"><command>mousepad ~/.config/tint2/primary.tint2rc</command></action>
			</item>
			<separator/>
			<item label="Edit Rofi settings">
				<action name="Execute"><command>mousepad ~/.config/rofi/config.rasi</command></action>
			</item>
		</menu>
		<separator/>
		<menu id="session" label="Session">
			<item label="Exit">
				<action name="Exit">
					<prompt>yes</prompt>
				</action>
			</item>
			<item label="Log Out">
				<action name="SessionLogout">
					<prompt>yes</prompt>
				</action>
			</item>
			<item label="Restart">
				<action name="Execute">
					<prompt>Do you want to restart?</prompt>
					<command>reboot</command>
				</action>
			</item>
			<item label="Shut down">
				<action name="Execute">
					<prompt>Do you want to shut down?</prompt>
					<command>init 0</command>
				</action>
			</item>
		</menu>
	</menu>
</openbox_menu>
